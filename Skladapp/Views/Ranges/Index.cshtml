@model IEnumerable<Skladapp.Models.Ranges>

@{
    ViewBag.Title = "Index";
}

<h2>Ассортимент</h2>

<p>
    @Html.ActionLink("Создать", "Create")
</p>
<table class="table">
    <tr>
        <th>
           Наименование ассортимента
        </th>
        <th>
            Цена
        </th>
        <th>
           Единица измерения
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Names_range)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Unit_of_measurement1.Short_title)
        </td>
        <td>
            @Html.ActionLink("Редактирование", "Edit", new { id=item.ID_product }) |
            @Html.ActionLink("Информация", "Details", new { id=item.ID_product }) |
            @Html.ActionLink("Удаление", "Delete", new { id=item.ID_product })
        </td>
    </tr>
}

</table>
