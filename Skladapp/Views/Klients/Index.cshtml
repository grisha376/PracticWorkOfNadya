@model IEnumerable<Skladapp.Models.Klients>

@{
    ViewBag.Title = "Index";
}

<h2>Клиент</h2>

<p>
    @Html.ActionLink("Создать", "Create")
</p>
<table class="table">
    <tr>
        <th>
           Фамилия
        </th>
        <th>
            Имя
        </th>
        <th>
            Отчество
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Sername)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Names)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Patronymic)
        </td>
        <td>
            @Html.ActionLink("Редактирование", "Edit", new { id=item.ID_Klients }) |
            @Html.ActionLink("Информация", "Details", new { id=item.ID_Klients }) |
            @Html.ActionLink("Удаление", "Delete", new { id=item.ID_Klients })
        </td>
    </tr>
}

</table>
